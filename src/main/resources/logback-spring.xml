<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Variável para nome da aplicação -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="api-gateway" />

    <!-- Diretório de logs -->
    <property name="LOG_PATH" value="./logs" />
    <property name="LOG_FILE" value="${LOG_PATH}/${appName}.log" />

    <!-- Pattern base -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- Pattern com traceId e spanId (para distributed tracing) -->
    <property name="LOG_PATTERN_TRACE"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{traceId:-}:%X{spanId:-}] - %msg%n" />

    <!-- ==== APPENDERS ==== -->

    <!-- Console com cores -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%blue(%thread)] %green(${appName}) %cyan(%logger{36}) - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Log de aplicação rotativo (1 arquivo por dia, 30 dias de retenção) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${appName}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN_TRACE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ==== LOGGERS ==== -->

    <!-- Spring Boot -->
    <logger name="org.springframework.boot" level="INFO" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.springframework.cloud.gateway" level="DEBUG" />
    <logger name="reactor.netty" level="INFO" />

    <!-- Apaga ruído do Eureka -->
    <logger name="com.netflix.discovery" level="WARN" />
    <logger name="com.netflix.eureka" level="WARN" />

    <!-- ==== ROOT ==== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

</configuration>